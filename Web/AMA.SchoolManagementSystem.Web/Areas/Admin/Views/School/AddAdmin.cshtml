@using AMA.SchoolManagementSystem.Web.Areas.Admin.ViewModels
@model RegisterAdminViewModel

@{
    /**/

    ViewBag.Title = "Добави Директор";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text-info">
    <div class="offset-2 col-10">
        <p><h4>Добави Директор</h4></p>
    </div>
</div>

<hr />
@Html.ValidationSummary("", new { @class = "text-danger" })

@using (Html.BeginForm("AddAdmin", "School", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.SchoolId)

    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.Email)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.Password)
        </div>
        <div class="col-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.ConfirmPassword)
        </div>
        <div class="col-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        <div class="offset-2">
            <button type="submit" class="btn btn-outline-info">Добави</button>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}




