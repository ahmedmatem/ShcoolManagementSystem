@using AMA.SchoolManagementSystem.Web.Areas.Admin.ViewModels
@model TeacherViewModel

@{
    ViewBag.Title = "Добави";
    Layout = "~/Areas/Admin/Views/Shared/_PrincipalLayout.cshtml";
}

<div class="row">
    <div class="col-10 text-center">
        <h4>Добавяне на учител</h4>
    </div>
</div>

@using (Html.BeginForm("Add", "Teachers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.FirstName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.FatherName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.FatherName)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2 col-form-label text-right">
            @Html.DisplayNameFor(m => m.LastName)
        </div>
        <div class="col-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="offset-2 col-10 text-danger">
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
    </div>
    <div class="form-group">
        <div class="offset-2">
            <button type="submit" class="btn btn-outline-info">Добави</button>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

