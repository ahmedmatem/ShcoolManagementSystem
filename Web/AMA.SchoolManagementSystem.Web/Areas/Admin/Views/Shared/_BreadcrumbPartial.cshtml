@using AMA.SchoolManagementSystem.Web.Inrastructure.Components
@model ICollection<Breadcrumb>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @for (int i = 0; i < Model.Count; i++)
        {
            Breadcrumb breadcrumb = Model.ElementAt<Breadcrumb>(i);
            if (i == Model.Count - 1)
            {
                <li class="breadcrumb-item active" aria-current="page">@Html.Raw(breadcrumb.Name)</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="@Url.Content(breadcrumb.Url)">@breadcrumb.Name</a></li>
            }
            
        }
    </ol>
</nav>
