@using AMA.SchoolManagementSystem.Web.ViewModels

@model LoginViewModel
@{
    /**/

    ViewBag.Title = "Вход";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "login-form" }))
{
    @Html.AntiForgeryToken()

    @Html.Hidden("ReturnUrl")

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Вход</h2>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user-check"></i></div>
                @Html.EnumDropDownListFor(m => m.LoginRoleType, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-control-feedback">
            <span class="text-danger align-middle">
                @Html.ValidationMessageFor(m => m.LoginRoleType)
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-group has-danger">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", placeholder = "Потребителско име или имейл" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-control-feedback">
            <span class="text-danger align-middle">
                @Html.ValidationMessageFor(m => m.Email)
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-control-feedback">
            <span class="text-danger align-middle">
                @Html.ValidationMessageFor(m => m.Password)
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="padding-top: .35rem">
        <div class="form-check mb-2 mr-sm-2 mb-sm-0">
            <label class="form-check-label">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                <span style="padding-bottom: .15rem">Запомни ме</span>
            </label>
        </div>
    </div>
</div>
<div class="row" style="padding-top: 1rem">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-right">
        <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Вход</button>
        @*<a class="btn btn-link" href="/password/reset">Забравена парола?</a>*@
        @*<a class="btn btn-link" href="/password/reset">Регистрация</a>*@
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <hr />
        @Html.ActionLink("Регистрация", "Register", "Account", new { Area = "" }, new { @calss = "btn btn-link" })&nbsp;|&nbsp;
        @Html.ActionLink("Забравена парола", "", "Account", new { Area = "" }, new { @calss = "btn btn-link" })
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-select.min.js"></script>
}
